<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.mastertref.SettingFragmentChild.GuiPhanHoi">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:fontFamily="@font/sfpro_bold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- Nội dung -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐẶT LẠI MẬT KHẨU"
            android:textSize="25sp"
            android:fontFamily="@font/sfpro_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:paddingBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập vào email liên kết với tài khoản của bạn và chúng tôi sẽ gửi một email để đặt lại mật khẩu của bạn"
            android:textSize="16sp"
            android:fontFamily="@font/sfpro_regu"
            android:textColor="@color/black"
            android:paddingBottom="8dp"/>

        <!-- EditText nhập góp ý -->
        <EditText
            android:id="@+id/feedback_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/mingray"
            android:hint="Nhập vào email của bạn..."
            android:padding="15dp"
            android:textSize="18sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:fontFamily="@font/sfpro_regu"/>

        <!-- Khoảng cách -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@android:color/transparent"/>

        <!-- Thông tin điều khoản -->

        <!-- Nút Gửi -->
        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfpro_medi"
            android:text="ĐẶT LẠI"
            android:textSize="18sp"
            android:backgroundTint="@color/pastel_orange"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:enabled="false"/>
    </LinearLayout>
</LinearLayout>
